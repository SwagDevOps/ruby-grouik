#!/usr/bin/env ruby
# frozen_string_literal: true

require 'pathname'
$0 = Pathname.new(__FILE__).basename.to_s

[nil, '/cli'].each do |r|
  begin
    require Pathname.new(__dir__).join('..', 'lib', '%s%s' % [$0, r])
  rescue LoadError
    begin
      require $0
    rescue LoadError
      require 'rubygems'
      require $0
    end
  end
end

# Process command line options and run

exit Grouik::Cli.run
